<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentSuccessActivity"
    android:background="@drawable/bg_payment">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/doneImageView"
        android:src="@drawable/ic_done"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doneImageView"
        android:text="PAYMENT SUCCESSFUL"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/paymentSuccessTextView" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/paymentSuccessTextView"
        android:layout_marginTop="30dp"
        android:id="@+id/containerBookingNumber">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking number :"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6371"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/containerDate"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/containerBookingNumber"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 Feb 2020"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/containerPriceTotal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/containerDate"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total : à¸¿"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,900"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/containerPaymentMethod"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/containerPriceTotal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment method :"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paypal"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/backToMainPageButton"
        android:background="@drawable/bt_rounded_payment"
        android:layout_below="@+id/containerPaymentMethod"
        android:layout_marginTop="300dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="#009959"
        android:text="Back to main page">

    </Button>


</RelativeLayout>